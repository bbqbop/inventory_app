doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .sideBar 
      a(href='/') Home 
      a(href='/catalog/dinos') Dinos 
      a(href='/catalog/categories') Categories 
      a(href='/catalog/lifeperiods') LifePeriods
    block content

  footer 
    hr
    if locals.isLoggedIn
      p= `logged in as ${locals.user}`
      a(href='/catalog/dino/create') Create new Dino 
      a(href='/catalog/category/create') Create new Category 
      a(href='/catalog/lifeperiod/create') Create new LifePeriod
      form(action="/logout", method="post")  
        input(type="hidden")
        button(type="submit") Logout
    else
      if !(currentUrl === '/login')
        a(href='/login') Login